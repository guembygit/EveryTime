@model List<User>

<h2>Gestion des utilisateurs</h2>

<a href="/Users/Create" class="btn btn-success mb-3">Créer un utilisateur</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Profil</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="usersTable">
        @foreach (var u in Model)
        {
            <tr data-id="@u.Id">
                <td>@u.FirstName @u.LastName</td>
                <td>@u.Email</td>
                <td>@u.Profile.Name</td>
                <td class="status">
                    <span class="badge @(u.IsActive ? "bg-success" : "bg-danger")">
                        @(u.IsActive ? "Actif" : "Désactivé")
                    </span>
                </td>
                <td>
                    <button class="btn btn-sm btn-warning editUser">Modifier</button>
                    <button class="btn btn-sm btn-secondary toggleStatus">
                        @(u.IsActive ? "Désactiver" : "Activer")
                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>

<!-- Modal -->
<div class="modal fade" id="userModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" id="userModalContent">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(function () {
            // Charger modal édition
            $(".editUser").click(function () {
                var id = $(this).closest("tr").data("id");
                $.get("/Users/Edit", { id: id }, function (html) {
                    $("#userModalContent").html(html);
                    $("#userModal").modal("show");

                    // Sauvegarde Ajax
                    $("#saveUserBtn").click(function () {
                        var formData = $("#editUserForm").serialize();
                        $.post("/Users/Edit", formData, function (res) {
                            if (res.success) location.reload();
                        });
                    });
                });
            });

            // Toggle Actif/Inactif
            $(".toggleStatus").click(function () {
                var $row = $(this).closest("tr");
                var id = $row.data("id");
                var $statusCell = $row.find(".status");
                var $btn = $(this);

                $.post("/Users/ToggleStatus", { id: id }, function (res) {
                    if (res.success) {
                        if (res.isActive) {
                            $statusCell.html('<span class="badge bg-success">Actif</span>');
                            $btn.text("Désactiver");
                        } else {
                            $statusCell.html('<span class="badge bg-danger">Désactivé</span>');
                            $btn.text("Activer");
                        }
                    }
                });
            });

        });
    </script>
}
