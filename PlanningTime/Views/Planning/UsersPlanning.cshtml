@model List<PlanningTime.Models.UserPlanning>

<div class="d-flex justify-content-between mb-3 align-items-center">
    <div>
        <label for="selectYear">Année :</label>
        <select id="selectYear" class="form-select d-inline-block w-auto">
            @for (int y = DateTime.Now.Year - 5; y <= DateTime.Now.Year + 5; y++)
            {
                if (y == ViewBag.Year)
                {
                    <option value="@y" selected>@y</option>
                }
                else
                {
                    <option value="@y">@y</option>
                }
            }
        </select>
    </div>

    <div>
        <button id="prevMonth" class="btn btn-secondary">« Mois précédent</button>
        <span id="currentMonth">@ViewBag.MonthName @ViewBag.Year</span>
        <button id="nextMonth" class="btn btn-secondary">Mois suivant »</button>
    </div>
</div>

<div id="usersPlanningContainer">
    @await Html.PartialAsync("_UsersPlanningGrid", Model)
</div>

<div id="eventDetailsModal" class="modal" style="display:none;">
    <div class="modal-content eventDetails" style="max-width:500px;margin:100px auto;padding:20px;border:1px solid #ccc;background:#fff;position:relative;">
        <span class="btn-close" style="position:absolute;top:10px;right:10px;cursor:pointer;">&times;</span>
        <h5>Détails de l’événement</h5>
        <p><strong>Type :</strong> <span id="detailType"></span></p>
        <p><strong>Date début :</strong> <span id="detailStart"></span></p>
        <p><strong>Date fin :</strong> <span id="detailEnd"></span></p>
        <p><strong>Motif :</strong> <span id="detailMotif"></span></p>
        <p><strong>Status :</strong> <span id="detailStatus"></span></p>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(function () {
            var currentMonth = parseInt("@ViewBag.Month");
            var currentYear = parseInt("@ViewBag.Year");

            function loadMonth(year, month) {
                $.get("/Planning/GetUsersMonth", { year: year, month: month }, function (data) {
                    $("#usersPlanningContainer").html(data);
                    currentMonth = month;
                    currentYear = year;
                    var monthName = $("#hiddenMonthName").val();
                    $("#currentMonth").text(monthName + " " + year);
                    // Mettre à jour le select année
                    $("#selectYear").val(year);
                });
            }

            $("#prevMonth").click(function () {
                var newMonth = currentMonth - 1;
                var newYear = currentYear;
                if (newMonth < 1) { newMonth = 12; newYear--; }
                loadMonth(newYear, newMonth);
            });

            $("#nextMonth").click(function () {
                var newMonth = currentMonth + 1;
                var newYear = currentYear;
                if (newMonth > 12) { newMonth = 1; newYear++; }
                loadMonth(newYear, newMonth);
            });

            // Changement de l'année
            $("#selectYear").change(function () {
                var selectedYear = parseInt($(this).val());
                currentYear = selectedYear;
                loadMonth(currentYear, currentMonth);
            });

            // Gestion du clic sur un point de jour
            $(document).on("click", ".dayDot", function () {
                var $btn = $(this);
                var dayType = $(this).data("type");
                var eventId = $btn.data("id");
                var eventTypeId = $btn.data("typeid");

                if (dayType) {
                    $.get("/Events/GetEventDetails", { id: eventId }, function (data) {
                        $("#detailType").text(data.eventTypeName);
                        $("#detailStart").text(data.startDate);
                        $("#detailEnd").text(data.endDate);
                        $("#detailMotif").text(data.motif ?? "—");
                        $("#detailStatus").text(data.status);

                        $("#eventDetailsModal").fadeIn();
                    });
                } else {
                    //$("#eventDetailsModal").fadeIn();
                    //$('.eventDetails').html("Aucun type défini pour ce jour.")
                }
            });
        
            // Fermer le modal
            $(document).on("click", "#eventDetailsModal .btn-close", function () {
                $("#eventDetailsModal").fadeOut();
            });

        });
    </script>
}
