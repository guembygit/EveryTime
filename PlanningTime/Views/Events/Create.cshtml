@model CreateEventViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5" style="max-width:700px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white text-center rounded-top-4" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
            <h3 class="mb-0">Créer un événement</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data" method="post">

                <!-- Type d'événement -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Type d'événement</label>
                    <select asp-for="EventTypeId" asp-items="@(new SelectList(ViewBag.EventTypes, "Id", "Name"))" class="form-select shadow-sm">
                        <option value="">-- Sélectionner --</option>
                    </select>
                </div>

                <!-- Date de début -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Date de début</label>
                    <input type="date" id="StartDate" name="StartDate" value="" class="form-control shadow-sm">
                </div>

                <!-- Date de fin -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Date de fin</label>
                    <input type="date" id="EndDate" name="EndDate" value="" class="form-control shadow-sm">
                </div>

                <!-- Motif -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Motif</label>
                    <textarea asp-for="Motif" class="form-control shadow-sm" rows="3" placeholder="Entrez le motif de l'événement"></textarea>
                </div>

                <!-- Justificatif -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Justificatif (optionnel)</label>
                    <input asp-for="Justificatif" type="file" class="form-control" />
                </div>

                <!-- Bouton submit -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%); border:none;">
                        Soumettre
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control:focus, .form-select:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 8px rgba(106, 17, 203, 0.3);
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
