@model List<PlanningTime.Models.Event>

<h2>Mes événements</h2>

@if (!Model.Any())
{
    <p>Vous n'avez encore créé aucun événement.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Motif</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Status</th>
                <th>Justificatif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.EventType.Name</td>
                    <td>@e.Motif</td>
                    <td>@e.StartDate.ToShortDateString()</td>
                    <td>@e.EndDate.ToShortDateString()</td>
                    <td>@e.Status</td>
                    <td>
                        @if (!string.IsNullOrEmpty(e.Justificatif))
                        {
                            <a href="@e.Justificatif" target="_blank">Voir</a>
                        }
                        else
                        {
                            <span>—</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger deleteEvent" data-id="@e.Id">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>

        $(document).on("click", ".deleteEvent", function () {
            if (!confirm("Voulez-vous vraiment supprimer cet événement ?")) return;

            var btn = $(this);
            var id = btn.data("id");

            $.post("/Events/Delete", { id: id }, function (res) {
                if (res.success) {
                    // Supprime la ligne du tableau sans recharger la page
                    btn.closest("tr").fadeOut(300, function () {
                        $(this).remove();
                    });
                } else {
                    alert("Erreur lors de la suppression !");
                }
            });
        });
       
    </script>
}

